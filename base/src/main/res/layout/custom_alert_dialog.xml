<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_270"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_rectangle_solid_ffffff_c8dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_custom_alert_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:textColor="#17364E"
        android:textSize="@dimen/sp_16"
        tools:text="title" />

    <TextView
        android:id="@+id/ll_custom_alert_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:textColor="#17364E"
        android:textSize="@dimen/sp_14"
        tools:text="content" />

    <!--分割线-->
    <View style="@style/line_horizontal_e8eaf2" />

    <!--两个按钮-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_custom_alert_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_3B55E6"
            android:background="@drawable/selector_pressed_e8eaf2_unpressed_ffffffff_bottom_left_c8dp"
            android:textSize="@dimen/sp_16"
            tools:visibility="visible" />

        <View
            android:id="@+id/tv_custom_alert_dialog_line"
            style="@style/line_vertical_e8eaf2"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/tv_custom_alert_dialog_ensure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_pressed_2f44b8_unpressed_3b55e6_bottom_right_c8dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>
</LinearLayout>