<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_mine_guide_line_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_guide_line_up_6" />

    <TextView
        android:id="@+id/textView_mine_guide_line_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-8dp"
        android:layout_toRightOf="@+id/imageView_mine_guide_line_avatar"
        android:layout_below="@+id/imageView_mine_guide_line_avatar"
        android:text="@string/guide_mine_avatar"
        android:textColor="@color/white"
        android:textSize="18dp" />
</RelativeLayout>