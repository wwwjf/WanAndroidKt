<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:background="@color/color_FF999999">

    <!--默认图-->
    <ImageView
        android:id="@+id/iv_state"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_ve_dialog_item_music_def_logo" />

    <TextView
        android:id="@+id/tv_music_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@color/item_music_text_color"
        android:textSize="@dimen/text_size_normal"
        tools:text="111111111111111111111111111111" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="53dp"
        android:layout_height="24dp"
        android:background="@drawable/item_music_btn_background_drawable"
        android:gravity="center"
        android:paddingBottom="1dp"
        android:text="@string/common_add_music"
        android:textAllCaps="false"
        android:textColor="@color/item_music_text_color"
        android:textSize="@dimen/text_size_normal" />
</LinearLayout>