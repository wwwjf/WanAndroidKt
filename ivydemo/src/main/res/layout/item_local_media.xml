<?xml version="1.0" encoding="utf-8"?>
<com.xianghe.ivy.weight.photo_select.widget.SquareRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/iv_item_local_media_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="4dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="sddfs"
        android:id="@+id/tv_item_local_media_time"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/tick_icon"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_alignParentRight="true"
        android:id="@+id/iv_item_local_media_tick"
        android:layout_width="24dp"
        android:layout_height="24dp" />

    <TextView
        android:visibility="gone"
        android:gravity="center"
        android:background="@drawable/shape_circle_red"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_item_local_media_check_number"
        android:layout_width="24dp"
        android:layout_height="24dp" />
</com.xianghe.ivy.weight.photo_select.widget.SquareRelativeLayout>