<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_view_empty_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/black_color_1e1e28"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_view_empty_data"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        android:contentDescription="@null"
        android:src="@mipmap/img_wushuju" />

    <TextView
        android:id="@+id/tv_view_empty_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_no_data"
        android:textColor="@color/white"
        android:textSize="16dp" />

</LinearLayout>