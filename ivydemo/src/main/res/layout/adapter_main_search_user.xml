<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/selector_282834_393945"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_item_main_search_user_avatar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_my_head_default" />

    <TextView
        android:id="@+id/tv_item_main_search_user_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_item_main_search_user_avatar"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@id/tv_item_main_search_user_follow"
        android:layout_toEndOf="@+id/iv_item_main_search_user_avatar"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Jason"
        android:textColor="#fff"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_item_main_search_user_uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_main_search_user_nickname"
        android:layout_alignStart="@+id/tv_item_main_search_user_nickname"
        android:layout_toEndOf="@id/iv_item_main_search_user_avatar"
        android:layout_toStartOf="@id/tv_item_main_search_user_follow"
        android:layout_marginTop="5dp"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="14dp" />


    <TextView
        android:id="@+id/tv_item_main_search_user_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_red_bg"
        android:ems="5"
        android:gravity="center"
        android:paddingLeft="9dp"
        android:paddingTop="8dp"
        android:paddingRight="9dp"
        android:paddingBottom="8dp"
        android:text="@string/common_add_follow"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_item_main_search_user_is_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:ems="5"
        android:gravity="center"
        android:paddingLeft="9dp"
        android:paddingTop="8dp"
        android:paddingRight="9dp"
        android:paddingBottom="8dp"
        android:text="@string/common_followed"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:visibility="gone" />
    <TextView
        android:id="@+id/tv_item_main_search_user_is_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:ems="5"
        android:gravity="center"
        android:paddingLeft="9dp"
        android:paddingTop="8dp"
        android:paddingRight="9dp"
        android:paddingBottom="8dp"
        android:text="@string/common_relative_friend"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:visibility="gone" />

</RelativeLayout>