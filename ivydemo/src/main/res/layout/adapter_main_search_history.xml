<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_282834_393945"
    android:paddingStart="14dp"
    android:paddingTop="14dp"
    android:paddingBottom="14dp">

    <ImageView
        android:id="@+id/iv_item_main_search_history_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_history" />

    <TextView
        android:id="@+id/tv_item_main_search_history_keyWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="14dp"
        android:layout_toStartOf="@id/iv_item_main_search_history_delete"
        android:layout_toEndOf="@+id/iv_item_main_search_history_icon"
        android:lines="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Jason"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/iv_item_main_search_history_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingStart="0dp"
        android:paddingEnd="14dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_clear" />
</RelativeLayout>