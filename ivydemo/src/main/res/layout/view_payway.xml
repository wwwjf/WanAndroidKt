<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_color_1e1e28"
        android:paddingBottom="@dimen/dp_4"
        android:paddingTop="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_14"
        android:text="提现方式"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_color_333333" />

    <LinearLayout
        android:id="@+id/ll_view_payway_alipay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_color_282834"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_14"
        android:paddingTop="@dimen/dp_12"
        android:paddingRight="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_12">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@mipmap/icon_zhifubao"
            android:drawableLeft="@mipmap/icon_zhifubao"
            android:drawablePadding="@dimen/dp_12"
            android:gravity="center_vertical"
            android:text="提现到支付宝"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/tv_view_payway_alipay_isbind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@mipmap/ic_next"
            android:drawableRight="@mipmap/ic_next"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_vertical"
            android:text="点击绑定"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_color_333333" />

    <LinearLayout
        android:id="@+id/ll_view_payway_wechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_color_282834"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_14"
        android:paddingTop="@dimen/dp_12"
        android:paddingRight="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_12">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@mipmap/icon_wechat"
            android:drawableLeft="@mipmap/icon_wechat"
            android:drawablePadding="@dimen/dp_12"
            android:gravity="center_vertical"
            android:text="提现到微信"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/tv_view_payway_wechat_isbind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@mipmap/ic_next"
            android:drawableRight="@mipmap/ic_next"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_vertical"
            android:text="点击绑定"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_color_333333" />
</LinearLayout>