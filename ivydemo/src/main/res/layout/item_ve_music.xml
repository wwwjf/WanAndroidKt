<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    tools:background="@color/color_FF999999">

    <!--默认图-->
    <ImageView
        android:id="@+id/item_ve_music_iv_def_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_ve_dialog_item_music_def_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />
    <!-- 动图-->
    <ImageView
        android:id="@+id/item_ve_music_iv_sport_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/animation_list_ve_music"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />


    <Button
        android:id="@+id/item_ve_music_btn_add"
        android:layout_width="53dp"
        android:layout_height="24dp"
        android:background="@drawable/shape_rectangle_stoke_ffffff_c20dp"
        android:gravity="center"
        android:text="@string/common_add_music"
        android:paddingBottom="1dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_ve_music_tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:ellipsize="marquee"
        android:gravity="left"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:textColor="@color/white"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_ve_music_iv_def_logo"
        app:layout_constraintRight_toLeftOf="@id/item_ve_music_btn_add"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="111111111111111111111111111111" />

</androidx.constraintlayout.widget.ConstraintLayout>