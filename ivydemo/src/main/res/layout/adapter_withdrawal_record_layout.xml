<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adapter_withdrawal_record_item_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_color_282834"
    android:orientation="vertical"
    android:padding="13dp">

    <ImageView
        android:id="@+id/item_withdrawal_record_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <LinearLayout
        android:id="@+id/item_withdrawal_record_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toEndOf="@+id/item_withdrawal_record_iv"
        android:gravity="center"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/item_withdrawal_record_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="16dp" />

        <TextView
            android:id="@+id/item_withdrawal_record_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:textColor="@color/color_999999"
            android:textSize="12dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_withdrawal_record_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_withdrawal_record_ll"
        android:layout_alignStart="@+id/item_withdrawal_record_ll"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/color_999999"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/item_money_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_18" />
</RelativeLayout>
