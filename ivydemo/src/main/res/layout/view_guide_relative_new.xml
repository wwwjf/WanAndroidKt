<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_relative_friend_guide_line_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ic_guide_line_up_7" />

    <TextView
        android:id="@+id/textView_relative_friend_guide_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:maxLines="2"
        android:layout_below="@+id/imageView_relative_friend_guide_line_new"
        android:text="@string/guide_relative_new"
        android:textColor="@color/white"
        android:textSize="18dp" />
</RelativeLayout>