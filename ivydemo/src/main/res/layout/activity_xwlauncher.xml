<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#F66"
    tools:context=".ui.module.welcom.XWLauncherActivity">

    <FrameLayout
        android:id="@+id/layout_huo_dong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/btn_launcher_skip_background"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:text="@string/common_skip"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_small" />

        <View
            android:id="@+id/btn_join"
            android:layout_width="240dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_margin="30dp"
            android:background="@mipmap/btn_likecanyu" />
    </FrameLayout>


    <com.xianghe.ivy.ui.module.welcom.CustomVideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</FrameLayout>