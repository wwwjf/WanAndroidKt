<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_8"
    android:paddingEnd="@dimen/dp_8">

    <ImageView
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="end"
        android:layout_marginTop="-26dp"
        android:scaleX="0.4"
        android:src="@drawable/shape_rectangle_b3000000_triangle_up" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_soild_b3000000_c4dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8">

        <TextView
            android:id="@+id/tv_popup_user_blacklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/dp_14"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_8"
            android:paddingStart="@dimen/dp_56"
            android:paddingTop="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_56"
            android:text="@string/common_add_blacklist"
            android:textColor="@color/white"
            android:textSize="16dp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_999999"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_popup_user_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/dp_14"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_8"
            android:paddingStart="@dimen/dp_48"
            android:paddingTop="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_48"
            android:text="@string/item_label_report"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </LinearLayout>

</LinearLayout>