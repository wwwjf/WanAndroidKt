<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_mine_guide_line_movie_cache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/ic_guide_line_up_5" />

    <TextView
        android:id="@+id/textView_mine_guide_line_movie_cache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-5dp"
        android:layout_alignBottom="@+id/imageView_mine_guide_line_movie_cache"
        android:layout_toStartOf="@+id/imageView_mine_guide_line_movie_cache"
        android:text="@string/guide_mine_movie_cache"
        android:textColor="@color/white"
        android:textSize="18dp" />
</RelativeLayout>