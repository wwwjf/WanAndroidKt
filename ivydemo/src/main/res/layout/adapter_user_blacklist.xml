<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_color_282834">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_item_user_blacklist_avatar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_my_head_default" />

    <TextView
        android:id="@+id/tv_item_user_blacklist_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_item_user_blacklist_avatar"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/iv_item_user_blacklist_avatar"
        android:lines="1"
        android:maxLines="1"
        android:text="Jason"
        android:textColor="#fff"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_item_user_blacklist_uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_user_blacklist_nickname"
        android:layout_alignStart="@+id/tv_item_user_blacklist_nickname"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textSize="12dp" />


    <TextView
        android:id="@+id/tv_item_user_blacklist_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:background="@drawable/shape_rectangle_soild_ff4855_c6dp"
        android:ems="5"
        android:gravity="center"
        android:paddingLeft="9dp"
        android:paddingTop="8dp"
        android:paddingRight="9dp"
        android:paddingBottom="8dp"
        android:text="@string/blacklist_delete"
        android:textColor="@color/white"
        android:textSize="14dp" />

</RelativeLayout>