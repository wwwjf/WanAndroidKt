<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_user_friend_rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_color_282834"
    android:orientation="vertical"

    android:paddingLeft="13dp"
    android:paddingTop="13dp"
    android:paddingRight="13dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_item_user_friend_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_my_head_default" />

    <TextView
        android:id="@+id/tv_item_user_friend_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/iv_item_user_friend_avatar"
        android:lines="1"
        android:maxLines="1"
        android:text="Jason"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_item_user_friend_uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_user_friend_nickname"
        android:layout_alignStart="@+id/tv_item_user_friend_nickname"
        android:layout_marginTop="3dp"
        android:textColor="@color/white"
        android:textSize="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_item_user_friend_uid"
        android:layout_alignStart="@+id/iv_item_user_friend_avatar"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@color/black_color_1e1e28" />

</RelativeLayout>
