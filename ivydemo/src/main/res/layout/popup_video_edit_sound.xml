<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ve_pop_ll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:gravity="right">

    <ImageView
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="-20dp"
        android:scaleX="0.5"
        android:src="@drawable/shape_rectangle_b3000000_triangle_up" />

    <LinearLayout
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_35"
        android:background="@drawable/shape_rectangle_soild_b3000000_c4dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14">

        <RelativeLayout
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:id="@+id/ve_pop_sound_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ve_pop_sound_tv_l"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/icon_ve_pop_sound"
                android:drawablePadding="@dimen/dp_14"
                android:gravity="center_vertical"
                android:text="@string/common_original_sound"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/ve_pop_sound_tv_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_toRightOf="@id/ve_pop_sound_tv_l"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/ve_pop_sound_tv"
                android:layout_width="@dimen/dp_27"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:maxLength="3"
                android:text="70"
                android:textColor="@color/white"
                android:textSize="14dp" />


            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/ve_pop_sound_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-5dp"
                android:layout_marginRight="-10dp"
                android:layout_toLeftOf="@id/ve_pop_sound_tv"
                android:layout_toRightOf="@id/ve_pop_sound_tv_ll"
                android:max="100"
                android:maxHeight="4dp"
                android:progress="50"
                android:progressDrawable="@drawable/video_seekbar" />

        </RelativeLayout>

        <View
            android:id="@+id/ve_pop_music_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_999999"
            android:visibility="gone"
            tools:visibility="visible" />

        <RelativeLayout
            android:layout_marginBottom="14dp"
            android:layout_marginTop="14dp"
            android:id="@+id/ve_pop_music_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/ve_pop_music_tv_l"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/icon_ve_pop_music"
                android:drawablePadding="@dimen/dp_14"
                android:gravity="center_vertical"
                android:text="@string/common_music"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/ve_pop_music_tv_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_toRightOf="@id/ve_pop_music_tv_l"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/ve_pop_music_tv"
                android:layout_width="@dimen/dp_27"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:maxLength="3"
                android:text="70"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/ve_pop_music_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-5dp"
                android:layout_marginRight="-10dp"
                android:layout_toLeftOf="@id/ve_pop_music_tv"
                android:layout_toRightOf="@id/ve_pop_music_tv_ll"
                android:max="100"
                android:maxHeight="4dp"
                android:progress="50"
                android:progressDrawable="@drawable/video_seekbar" />


        </RelativeLayout>

        <View
            android:id="@+id/ve_pop_record_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_999999"
            android:visibility="gone"
            tools:visibility="visible" />

        <RelativeLayout
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:id="@+id/ve_pop_record_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/ve_pop_record_tv_l"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/icon_ve_pop_record"
                android:drawablePadding="@dimen/dp_14"
                android:gravity="center_vertical"
                android:text="@string/common_dubbing"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/ve_pop_record_tv_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_toRightOf="@id/ve_pop_record_tv_l"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/ve_pop_record_tv"
                android:layout_width="@dimen/dp_27"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:maxLength="3"
                android:text="70"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/ve_pop_record_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-5dp"
                android:layout_marginRight="-10dp"
                android:layout_toLeftOf="@id/ve_pop_record_tv"
                android:layout_toRightOf="@id/ve_pop_record_tv_ll"
                android:max="100"
                android:maxHeight="4dp"
                android:progress="50"
                android:progressDrawable="@drawable/video_seekbar" />


        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>