<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_main_guide_line_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imageView_main_guide_line_mine"
        android:text="@string/guide_main_mine"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/imageView_main_guide_line_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:src="@mipmap/ic_guide_line_down_2" />

</RelativeLayout>