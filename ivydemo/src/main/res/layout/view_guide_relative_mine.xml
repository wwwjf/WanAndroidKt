<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_relative_friend_guide_line_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ic_guide_line_up_9" />

    <TextView
        android:id="@+id/textView_relative_friend_guide_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_relative_friend_guide_line_mine"
        android:text="@string/guide_relative_mine"
        android:textColor="@color/white"
        android:textSize="18dp" />
</RelativeLayout>