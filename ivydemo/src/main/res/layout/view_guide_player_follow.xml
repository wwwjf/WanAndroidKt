<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_main_guide_line_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ic_guide_line_straight" />

    <TextView
        android:id="@+id/textView_player_guide_line_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_main_guide_line_follow"
        android:layout_marginBottom="-8dp"
        android:layout_toEndOf="@+id/imageView_main_guide_line_follow"
        android:text="@string/guide_player_follow"
        android:textColor="@color/white"
        android:textSize="18dp" />
</RelativeLayout>