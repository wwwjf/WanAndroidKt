<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_mine_guide_line_relative_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:src="@mipmap/ic_guide_line_down_1" />

    <TextView
        android:id="@+id/textView_mine_guide_line_relative_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView_mine_guide_line_relative_friend"
        android:layout_marginTop="-5dp"
        android:layout_toEndOf="@+id/imageView_mine_guide_line_relative_friend"
        android:text="@string/guide_mine_relative_friend"
        android:textColor="@color/white"
        android:textSize="18dp" />
</RelativeLayout>