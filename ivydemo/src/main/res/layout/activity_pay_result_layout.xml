<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black_color_1e1e28"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/pay_result_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_54"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/pay_result_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_12"
        android:textSize="@dimen/dp_20"/>

    <LinearLayout
        android:id="@+id/pay_result_success_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:visibility="visible"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/pay_result_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_20"/>

        <TextView
            android:id="@+id/pay_result_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_20"/>

        <TextView
            android:id="@+id/pay_result_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_20"/>
    </LinearLayout>

    <TextView
        android:id="@+id/pay_result_repay_btn"
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_gravity="center"
        android:background="@drawable/shape_rectangle_soild_ff4855_c6dp"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:visibility="gone"
        android:text="@string/re_pay"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16" />
</LinearLayout>