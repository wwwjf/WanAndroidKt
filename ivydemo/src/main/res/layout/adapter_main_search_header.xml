<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_color_1e1e28"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item_user_search_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="8dp"
        android:text="@string/common_user"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_item_user_search_header_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_more"
        android:padding="8dp"
        android:text="@string/common_more_user"
        android:background="@drawable/selector_1e1e28_2e2e38"
        android:textColor="@color/white"
        android:textSize="14dp" />

</LinearLayout>
