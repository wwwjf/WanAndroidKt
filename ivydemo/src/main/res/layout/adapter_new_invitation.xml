<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginRight="14dp"
    android:id="@+id/ll_item_invite_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:paddingRight="14dp"
    android:paddingLeft="14dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@mipmap/ic_my_head_default"
        android:id="@+id/iv_item_invite_icon"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:layout_width="32dp"
        android:layout_height="32dp" />

    <TextView
        android:layout_marginLeft="38dp"
        android:layout_toRightOf="@id/iv_item_invite_icon"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:id="@+id/tv_item_invite_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_item_invite_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <View
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:background="@color/black_color_4a4a59"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
</LinearLayout>