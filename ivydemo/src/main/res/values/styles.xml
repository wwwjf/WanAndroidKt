<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Activity theme 无标题栏 -->
    <style name="AppTheme.NoTitle" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <!-- Activity theme 无标题栏 -->
    <style name="AppTheme.WindowTransparent" parent="AppTheme.NoTitle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--设置窗口的背景是否为半透明，设置透明背景必须要设置此项-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent
        </item> <!-- 设置window透明后, padding边距就没了 -->
        <item name="android:windowIsTranslucent">true
        </item>                    <!-- 设置window透明后, padding边距就没了 -->
    </style>

    <style name="BtnRedStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:background">@drawable/btn_red_bg</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <!-- 主页-推荐-Style -->
    <style name="RecommendStyle" />

    <style name="RecommendStyle.MovieInfo" />

    <style name="RecommendStyle.MovieInfo.Icon">
        <item name="android:layout_width">@dimen/main_recommend_movie_icon_size</item>
        <item name="android:layout_height">@dimen/main_recommend_movie_icon_size</item>
    </style>

    <style name="RecommendStyle.MovieInfo.Text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- 播放界面-Style -->
    <style name="PlayerActivityStyle" />

    <style name="PlayerActivityStyle.SeekBarText">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>

    <style name="PlayerActivityStyle.Btn">
        <item name="android:layout_width">@dimen/player_btn_size</item>
        <item name="android:layout_height">@dimen/player_btn_size</item>
    </style>

    <!-- 分享菜单 Style -->
    <style name="ShareMenuStyle" />

    <style name="ShareMenuStyle.Btn">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="ShareMenuStyle.Text">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>

    <declare-styleable name="ProgressWheel">
        <attr name="matProg_progressIndeterminate" format="boolean" />
        <attr name="matProg_barColor" format="color" />
        <attr name="matProg_rimColor" format="color" />
        <attr name="matProg_rimWidth" format="dimension" />
        <attr name="matProg_spinSpeed" format="float" />
        <attr name="matProg_barSpinCycleTime" format="integer" />
        <attr name="matProg_circleRadius" format="dimension" />
        <attr name="matProg_fillRadius" format="boolean" />
        <attr name="matProg_barWidth" format="dimension" />
        <attr name="matProg_linearProgress" format="boolean" />
    </declare-styleable>

    <!-- 自定义Dialog -->
    <style name="Custom_Progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black_color_AAAAAA</item>
    </style>

    <style name="line_horizontal_eee">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/color_eeeeee</item>
    </style>

    <style name="line_vertical_eee">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0.5dp</item>
        <item name="android:background">@color/color_eeeeee</item>
    </style>

    <style name="line_horizontal_999">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white_color_999999</item>
    </style>

    <style name="line_horizontal_red">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/red_color_FF4855</item>
    </style>

    <!--EditText基本样式 单行、输入不全屏显示-->
    <style name="EditTextBase">
        <item name="android:singleLine">true</item>
    <item name="android:maxLines">1</item>
    <item name="android:lines">1</item>
    <item name="android:ellipsize">end</item>
    <item name="android:imeOptions">flagNoFullscreen</item>
    <item name="android:textCursorDrawable">@drawable/shape_rectangle_solid_ff4855_size1dp
    </item>
        <item name="android:background">@null</item>
    </style>

    <style name="layout_left_text">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_right_text">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textColorHint">@color/black_color_8c91a9</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="EditTextBase.login">
        <item name="android:background">@drawable/shape_rectangle_soild_282834_c6dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColorHint">@color/color_999999</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextBase.search">
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColorHint">@color/black_color_AAAAAA</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableStart">@drawable/ic_search_pressed</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="EditTextBase.search.null" parent="EditTextBase.search">
        <item name="android:drawableStart">@null</item>
    </style>

    <style name="EditTextBase.member" parent="EditTextBase">
        <item name="android:background">@drawable/shape_rectangle_solid_ffffff_c5dp</item>
    </style>


    <style name="SuperTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="sBackgroundDrawableRes">@color/black_color_1e1e28</item>
        <item name="sDividerLineType">none</item>
        <item name="sLeftTextColor">@color/white_70</item>
        <item name="sLeftTextSize">@dimen/text_size_big</item>
        <item name="sRightIconRes">@mipmap/ic_next</item>
    </style>


    <style name="LoadingIndicatorView">
        <item name="minWidth">24dip</item>
        <item name="maxWidth">24dip</item>
        <item name="minHeight">24dip</item>
        <item name="maxHeight">24dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <style name="SettingTextItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

</resources>
